{
    "compilerOptions": {
      "target": "es2017",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "module": "commonjs",
      "rootDir": "src",
      "outDir": "dist",
      "removeComments": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "typeRoots": ["node_module/@types", "src/types"],
      "strictNullChecks": false
    },
    "include": ["src"]
  }